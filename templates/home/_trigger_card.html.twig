{% set has_active = (counts.pending > 0) or (counts.sent > 0) %}
{% set is_recent = trigger.createdAt|date('U') > 'now'|date('U') - 10800 %}
{% set is_initializing = counts.total == 0 and is_recent %}
{% set should_poll = is_recent and (has_active or is_initializing) %}

<div class="trigger-card" id="trigger-{{ trigger.uuid }}"
    {% if should_poll %}
        data-controller="trigger-status"
        data-trigger-status-url-value="{{ path('trigger_status', {uuid: trigger.uuid}) }}"
    {% endif %}
>
    <div class="d-flex align-items-start gap-3">
        <span class="badge {{ trigger.type == 'sms' ? 'bg-info' : (trigger.type == 'both' ? 'bg-success' : 'bg-warning text-dark') }} trigger-badge">
            {{ trigger.type == 'sms' ? 'SMS' : (trigger.type == 'both' ? 'SMS + Appel' : 'Appel') }}
        </span>
        <div class="flex-grow-1 min-w-0">
            <p class="trigger-content mb-1">{{ trigger.content|length > 120 ? trigger.content|slice(0, 120) ~ '…' : trigger.content }}</p>
            <div class="trigger-meta">
                <span>{{ trigger.contacts|length }} contact{{ trigger.contacts|length > 1 ? 's' : '' }}</span>
                <span class="mx-1">&middot;</span>
                <span>{{ counts.total }} message{{ counts.total > 1 ? 's' : '' }}</span>
                {% if counts.failed > 0 %}
                    <span class="mx-1">&middot;</span>
                    <span class="text-danger">{{ counts.failed }} erreur{{ counts.failed > 1 ? 's' : '' }}</span>
                {% endif %}
                <span class="mx-1">&middot;</span>
                <span>{{ trigger.createdAt|date('d/m/Y H:i') }}</span>
            </div>

            {% if is_initializing %}
                <div class="trigger-status-legend mt-2">
                    <span class="text-muted"><span class="spinner-border spinner-border-sm me-1" role="status"></span> Préparation des messages…</span>
                </div>
            {% elseif counts.total > 0 %}
                {% set pct_delivered = (counts.delivered / counts.total * 100)|round(1) %}
                {% set pct_sent = (counts.sent / counts.total * 100)|round(1) %}
                {% set pct_failed = (counts.failed / counts.total * 100)|round(1) %}
                {% set pct_pending = (100 - pct_delivered - pct_sent - pct_failed)|round(1) %}

                <div class="progress trigger-progress mt-2" role="progressbar">
                    {% if pct_delivered > 0 %}
                        <div class="progress-bar bg-success" style="width: {{ pct_delivered }}%"></div>
                    {% endif %}
                    {% if pct_sent > 0 %}
                        <div class="progress-bar bg-primary" style="width: {{ pct_sent }}%"></div>
                    {% endif %}
                    {% if pct_failed > 0 %}
                        <div class="progress-bar bg-danger" style="width: {{ pct_failed }}%"></div>
                    {% endif %}
                    {% if pct_pending > 0 %}
                        <div class="progress-bar bg-secondary" style="width: {{ pct_pending }}%; opacity: 0.3"></div>
                    {% endif %}
                </div>

                <div class="trigger-status-legend mt-1">
                    {% if pct_delivered > 0 %}
                        <span><span class="trigger-status-dot bg-success"></span> {{ pct_delivered }}% distribué{{ pct_delivered > 1 ? 's' : '' }}</span>
                    {% endif %}
                    {% if pct_sent > 0 %}
                        <span><span class="trigger-status-dot bg-primary"></span> {{ pct_sent }}% envoyé{{ pct_sent > 1 ? 's' : '' }}</span>
                    {% endif %}
                    {% if pct_failed > 0 %}
                        <span><span class="trigger-status-dot bg-danger"></span> {{ pct_failed }}% échoué{{ pct_failed > 1 ? 's' : '' }}</span>
                    {% endif %}
                    {% if pct_pending > 0 %}
                        <span><span class="trigger-status-dot bg-secondary"></span> {{ pct_pending }}% en attente</span>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        <a href="{{ path('trigger_detail', {uuid: trigger.uuid}) }}" class="btn-icon trigger-detail-link" title="Détails">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
        </a>
    </div>
</div>
