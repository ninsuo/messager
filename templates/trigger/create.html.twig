{% extends 'base.html.twig' %}

{% block title %}Messager - Nouveau déclenchement{% endblock %}

{% block body %}
    <div class="app-wrapper">
        <div class="container" style="max-width: 720px;">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('home') }}" class="btn btn-outline-secondary btn-sm me-3">&larr; Retour</a>
                <h1 class="app-title mb-0">Nouveau déclenchement</h1>
            </div>

            {{ form_start(form, {attr: {id: 'trigger-form'}}) }}

                {# ── Audience ── #}
                <div class="form-section mb-4">
                    <h2 class="form-section-title">Audience</h2>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Listes de contacts</label>

                        {% if form.books|length == 0 %}
                            <p class="text-muted small">Aucune liste disponible.</p>
                        {% else %}
                            <div class="book-list">
                                {% for child in form.books %}
                                    {% set book = books[child.vars.value] %}
                                    <div class="book-item d-flex align-items-center">
                                        {{ form_widget(child, {attr: {class: 'form-check-input me-2'}}) }}
                                        <label class="form-check-label flex-grow-1" for="{{ child.vars.id }}">
                                            {{ book.name }}
                                            <span class="text-muted small">({{ book.contacts|length }})</span>
                                        </label>
                                        <a href="{{ path('book_edit', {uuid: book.uuid}) }}" class="btn-icon" title="Modifier">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                                        </a>
                                        <a href="{{ path('book_delete', {uuid: book.uuid}) }}"
                                           class="btn-icon text-danger"
                                           title="Supprimer"
                                           data-turbo-method="post"
                                           data-turbo-confirm="Supprimer la liste « {{ book.name }} » ?">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <label for="{{ form.phones.vars.id }}" class="form-label fw-semibold">Contacts</label>
                        {{ form_widget(form.phones) }}
                    </div>

                    <div data-controller="book-save">
                        <div class="form-check mb-2">
                            {{ form_widget(form.saveAsBook, {attr: {class: 'form-check-input', 'data-book-save-target': 'toggle', 'data-action': 'change->book-save#toggle'}}) }}
                            <label class="form-check-label" for="{{ form.saveAsBook.vars.id }}">Sauvegarder comme liste de contacts</label>
                        </div>
                        <div class="d-none" data-book-save-target="nameField">
                            {{ form_widget(form.bookName) }}
                        </div>
                    </div>
                </div>

                {# ── Message ── #}
                <div class="form-section mb-4" data-controller="message-input">
                    <h2 class="form-section-title">Message</h2>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Type</label>
                        <div class="d-flex gap-3">
                            {% for child in form.type %}
                                <div class="form-check">
                                    {{ form_widget(child, {attr: {class: 'form-check-input', 'data-message-input-target': 'type', 'data-action': 'change->message-input#typeChanged'}}) }}
                                    <label class="form-check-label" for="{{ child.vars.id }}">{{ child.vars.label }}</label>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="{{ form.content.vars.id }}" class="form-label fw-semibold">Contenu</label>
                        {{ form_widget(form.content, {attr: {'data-message-input-target': 'content', 'data-action': 'input->message-input#updateCounter'}}) }}

                        <div class="mt-2">
                            <div class="progress message-progress">
                                <div class="progress-bar" role="progressbar"
                                     data-message-input-target="progressBar"
                                     style="width: 0%"></div>
                            </div>
                            <div class="d-flex justify-content-end mt-1">
                                <small class="text-muted" data-message-input-target="counter">0 / 306</small>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-ms-primary w-100">
                    Créer le déclenchement
                </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
