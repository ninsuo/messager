{% extends 'base.html.twig' %}

{% block title %}Messager - Détails du déclenchement{% endblock %}

{% block body %}
    <div class="app-wrapper">
        <div class="container" style="max-width: 720px;">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('home') }}" class="btn btn-outline-secondary btn-sm me-3">&larr; Retour</a>
                <h1 class="app-title mb-0 flex-grow-1">Détails</h1>
                <form method="post" action="{{ path('trigger_delete', {uuid: trigger.uuid}) }}" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Supprimer ce déclenchement et tous ses messages ?')">Supprimer</button>
                </form>
            </div>

            <div class="form-section mb-4">
                <div class="d-flex align-items-start gap-3 mb-3">
                    <span class="badge {{ trigger.type == 'sms' ? 'bg-info' : 'bg-warning text-dark' }} trigger-badge">
                        {{ trigger.type == 'sms' ? 'SMS' : 'Appel' }}
                    </span>
                    <div class="flex-grow-1">
                        <p class="trigger-content mb-1">{{ trigger.content }}</p>
                        <div class="trigger-meta">
                            <span>{{ trigger.contacts|length }} contact{{ trigger.contacts|length > 1 ? 's' : '' }}</span>
                            <span class="mx-1">&middot;</span>
                            <span>{{ trigger.createdAt|date('d/m/Y H:i') }}</span>
                        </div>
                    </div>
                </div>

                {% include 'trigger/_detail_body.html.twig' with {trigger: trigger, messages: messages, counts: counts} only %}
            </div>
        </div>
    </div>
{% endblock %}
