{% extends 'base.html.twig' %}

{% block title %}Messager - Vérification{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <div class="login-card">
            <div class="logo-section">
                <img src="{{ asset('logo.svg') }}" alt="Messager">
            </div>

            <h1>Vérification</h1>
            <p class="text-center text-muted mb-4">Entrez le code reçu par SMS</p>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {{ form_start(form) }}
                <div class="mb-3" data-controller="code-input">
                    <label class="form-label visually-hidden">Code de vérification</label>

                    <div class="code-digits">
                        {% for i in 0..5 %}
                            <input type="text"
                                   inputmode="numeric"
                                   pattern="\d"
                                   maxlength="1"
                                   class="code-digit"
                                   autocomplete="off"
                                   data-code-input-target="digit"
                                   data-action="input->code-input#onInput keydown->code-input#onKeydown paste->code-input#onPaste focus->code-input#onFocus"
                                   {% if i == 0 %}autofocus{% endif %}
                                   aria-label="Chiffre {{ i + 1 }}">
                            {% if i == 2 %}
                                <span class="code-separator"></span>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <div class="d-none">
                        {{ form_widget(form.code, {attr: {'data-code-input-target': 'hidden'}}) }}
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me" value="1">
                    <label class="form-check-label" for="remember_me">Rester connecté</label>
                </div>

                <button type="submit" class="btn btn-ms-primary w-100">
                    Vérifier
                </button>
            {{ form_end(form) }}

            <div class="text-center mt-3">
                <form method="post" action="{{ path('verify_call', {unguessableCode: unguessableCode}) }}">
                    <button type="submit" class="btn btn-link btn-sm p-0 text-muted">
                        Recevoir le code par appel vocal
                    </button>
                </form>
            </div>

            <div class="text-center mt-2">
                <a href="{{ path('home') }}">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
