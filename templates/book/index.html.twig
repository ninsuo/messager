{% extends 'base.html.twig' %}

{% block title %}Messager - Listes de contacts{% endblock %}

{% block body %}
    <div class="app-wrapper">
        <div class="container" style="max-width: 600px;">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('home') }}" class="btn btn-outline-secondary btn-sm me-3">&larr; Retour</a>
                <h1 class="app-title mb-0">Listes de contacts</h1>
            </div>

            {% if books is empty %}
                <div class="empty-state">
                    <p class="text-muted empty-message">Aucune liste de contacts pour le moment.</p>
                </div>
            {% else %}
                <div class="form-section mb-4">
                    {% for book in books %}
                        <div class="contact-item d-flex align-items-center justify-content-between">
                            <div>
                                <strong>{{ book.name }}</strong>
                                <span class="text-muted small ms-2">({{ book.contacts|length }} contact{{ book.contacts|length > 1 ? 's' : '' }})</span>
                            </div>
                            <div class="d-flex gap-2 align-items-center">
                                <a href="{{ path('book_edit', {uuid: book.uuid}) }}" class="btn-icon" title="Modifier">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                                </a>
                                <form method="post" action="{{ path('book_delete', {uuid: book.uuid}) }}">
                                    <button type="submit" class="btn-icon text-danger" title="Supprimer"
                                            onclick="return confirm('Supprimer cette liste de contacts ?')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="form-section">
                <h2 class="form-section-title">Ajouter une liste</h2>
                <form method="post" action="{{ path('book_create') }}">
                    <div class="d-flex gap-2">
                        <input type="text" class="form-control" name="name" placeholder="Nom de la liste" required>
                        <button type="submit" class="btn btn-ms-primary">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
