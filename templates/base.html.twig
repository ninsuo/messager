<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Messager{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.svg') }}" type="image/svg+xml">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-ms">
            <div class="container d-flex justify-content-between align-items-center">
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img src="{{ asset('favicon.svg') }}" alt="" width="32" height="32">
                    messager
                </a>
                    <div class="navbar-ms-actions">
                        {% if app.environment == 'dev' %}
                            <a href="{{ path('sandbox') }}" class="btn btn-outline-warning btn-sm">Sandbox</a>
                        {% endif %}
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}" class="btn btn-outline-light btn-sm">Admin</a>
                            {% endif %}
                            <a href="{{ path('logout') }}" class="btn btn-outline-light btn-sm">DÃ©connexion</a>
                        {% endif %}
                    </div>
            </div>
        </nav>

        {% for message in app.flashes('success') %}
            <div class="container mt-3">
                <div class="alert alert-success mb-0">{{ message }}</div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="container mt-3">
                <div class="alert alert-danger mb-0">{{ message }}</div>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

        <footer class="footer-ms">
            <div class="container">
                &copy; {{ 'now'|date('Y') }} Messager
            </div>
        </footer>
    </body>
</html>
